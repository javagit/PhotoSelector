<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textWriteColor"
    android:padding="1dp">

    <com.fire.photoselector.view.SquareImageView
        android:id="@+id/iv_photo_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dividerColor"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_photo_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:src="@drawable/compose_photo_preview_default" />

    <ImageView
        android:id="@+id/iv_gif_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_image_gif" />
</FrameLayout>